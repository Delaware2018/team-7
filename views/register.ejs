  <div class="container py-5">
    <div class="pb-2" style="padding-left: 0">
    <h1>Register</h1>
    </div>

     <div style="padding-left: 25%;">

    <form action="/register" method="POST">
    <div class="form-group">
      <input type="firstName" class="form-control" name="firstName" placeholder="First Name">
    </div>
    <div class="form-group">
      <input type="lastName" class="form-control" name="lastName" placeholder="Last Name">
    </div>
    <div class="form-group">
      <input type="phoneNumber" class="form-control" name="phoneNumber" placeholder="Phone Number">
    </div>
    <div class="form-group">
      <input type="email" class="form-control" name="email" placeholder="Email">
    </div>
    <div class="form-group">
      <input type="username" class="form-control" name="username" placeholder="Create a username">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="Create a password">
    </div>
    <div class="form-group">
      <input type="age" class="form-control" name="age" placeholder="Age">
    </div>
    <div class="form-group">
      <input type="city" class="form-control" name="location" placeholder="City">
    </div>
    <div class="form-group">
      <input type="children" class="form-control" name="children" placeholder="How many children do you have?">
    </div>
    <div class="form-group">
      <input type="married" class="form-control" name="married" placeholder="Are you married? Answer Y or N">
    </div>
    <div class="form-group">
      <input type="income" class="form-control" name="income" placeholder="Annual Income">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
